.left-bar {
  width: 70vw;
  padding: 50rpx 0 0 50rpx;
  box-sizing: border-box;
}
/* 头像信息 */
.left-bar .user-info {
  display: flex;
  align-items: center;
}
.user-info .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.user-info .text {
  flex: 1;
  overflow: hidden;
}
.user-info .text .username {
  font-size: 30rpx;
  font-weight: bold;
}
.user-info .text .department {
  font-size: 24rpx;
  color: #666666;
  padding-top: 10rpx;
}
/* 所属公司 */
.left-bar .company {
  font-size: 26rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

/* 操作列表 */
.left-bar .operate-list {
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E6E6E6;
  display: flex;
  align-items: center;
  position: relative;
}
.operate-list .icon {
  font-size: 50rpx;
  margin-right: 30rpx;
}
.operate-list .text {
  font-size: 26rpx;
  font-weight: bold;
}
.operate-list .right {
  font-size: 22rpx;
  color: #B3B3B3;
  position: absolute;
  top: 50%;
  right: 45rpx;
  transform: translateY(-50%);
}
/* 在线客服 */
.left-bar .contact-button.operate-list {
  background: red;
  font-size: 26rpx;
  font-weight: bold;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
}
