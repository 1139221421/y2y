<van-popup
        show="{{ showPopup }}"
        bind:close="closeLeftBar"
        position="left"
        z-index="100"
        custom-style="height: 100%;">
    <view class="left-bar" style="margin-top: {{top}}">
        <text class="left-bar-title">选择分类</text>
        <view class="item-types">
            <view class="{{item.active?'item-type item-active':'item-type'}}"
                  bindtap="itemClick"
                  id="{{index}}"
                  wx:for="{{types}}"
                  wx:key="index">
                {{item.name}}
            </view>
        </view>
    </view>
</van-popup>


