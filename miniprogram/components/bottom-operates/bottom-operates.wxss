/* 弹出框标题 */
.modal-title-wrapper {
  font-size: 24rpx;
  color: #333;
  padding: 16rpx 80rpx;
  border-bottom: 1rpx solid white;
  display: flex;
  align-items: baseline;
  background: white;
  justify-content: center;
}
.modal-title-wrapper .title {
  overflow: hidden;
  max-width: calc(100% - 8em);
}

/* 操作列表 */
.operate-list {
  background: #f0f0f0;
  padding: 60rpx 30rpx 0;
  box-sizing: border-box;
}
.operate-list .icon-wrapper {
  width: 25%;
  text-align: center;
  display: inline-block;
  padding-bottom: 60rpx;
}
.operate-list .iconfont {
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  font-size: 60rpx;
  background: white;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  color: #1A1A1A;
}
.operate-list .disabled .iconfont {
  color: #cacaca;
}
.operate-list .text {
  font-size: 26rpx;
  color: #666;
  padding-top: 26rpx;
}
.operate-list .active-icon-wrapper .iconfont {
  background: rgba(90,190,247,0.1);
}
