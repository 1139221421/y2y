<wxs src="../../utils/common.wxs" module="utils"></wxs>
<!-- 内容区 -->
<scroll listLen="{{listLen}}"
        scroll-height="{{ scrollHeight }}"
        refresher-triggered="{{ refresherTriggered }}"
        loading="{{ loading }}"
        bind:refresh="onRefresh"
        bind:load-more="onLoadMore">
    <view class="content">
        <view wx:for="{{list}}" wx:key="index">
            <text>nane:{{item.name}}</text>
        </view>
        <button bindtap="showPopup">弹出层</button>
    </view>
</scroll>

<!-- 底部导航栏 -->
<nav-bar active="0" wx:if="{{loginState}}"></nav-bar>

<!-- 底部弹出框 -->
<bottom-operates
        title="弹出"
        show="{{ showPopup }}"
        list="{{ operatorList }}"
        bind:click-item="clickOperator"
></bottom-operates>


