<!-- 顶部 header -->
<view class="header" style="{{ headerStyle }}">
    <!-- 自定义图标 -->
    <view style="{{ iconStyle }}" wx:if="{{ customIcon }}">
        <slot name="icon"></slot>
    </view>
    <van-icon class="icon icon-home"
              name="wap-home-o"
              style="{{ iconStyle }}"
              wx:elif="{{ icon==='home' }}"
              bindtap="iconHandler"/>
    <van-icon class="icon"
              name="{{icon}}"
              style="{{ iconStyle }}"
              wx:else
              bindtap="iconHandler"/>
    <!-- 标题 -->
    <view class="title">{{ title }}</view>
</view>
<view style="{{ headerStyle }}"></view>
